<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include the Room database -->
        <include domain="database" path="loom_database" />
        
        <!-- Include DataStore preferences -->
        <include domain="sharedpref" path="." />
        
        <!-- Exclude sensitive credentials -->
        <exclude domain="sharedpref" path="aws_credentials.preferences_pb" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include everything for device-to-device transfer -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
    </device-transfer>
</data-extraction-rules>
